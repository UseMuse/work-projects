@model Forecast.Models.LoginModel

@{
    ViewBag.Title = "Выполнить вход";
}

<hgroup class="title">
    <h3>@ViewBag.Title.</h3>
</hgroup>

<section id="loginForm">
    <h4>Используйте для входа локальную учетную запись.</h4>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Форма входа</legend>

            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
            <br />

            <span style="position: relative; top: 4px;">Запомнить</span>
            @Html.CheckBoxFor(m => m.RememberMe)

            <div style="position: relative; left: 69px; display: initial;">
                <input class="btn" type="submit" value="Вход" />
            </div>
        </fieldset>
        <br />
        <p>
            @Html.ActionLink("Зарегистрируйтесь", "Register"), если у вас нет учетной записи.
        </p>
    }
</section>

