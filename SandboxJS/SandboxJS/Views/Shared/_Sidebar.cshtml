@using SandboxJS.Models.BaseModel
@*<script type="text/javascript" src="~/Scripts/MyScripts/Angular/menu.js"></script>*@

@{
    var sections = new List<Section>
    {
        new Section("Admin ",new List<Sub>
        {
            new Sub("Index")
        }),
        new Section("Require",new List<Sub>
        {
           new Sub("Users") 
        }),
        new Section("Knockout ", new List<Sub>{
            new Sub("Placeholder"),
            new Sub("Template")
        }),
        new Section("Massiv " , new List<Sub>{
            new Sub("Home"),
            new Sub("Closure")
        }),
        new Section("Native ", new List<Sub>{
            new Sub("MutationObserver"),
            new Sub("Table"),
            new Sub("BackButton"),
            new Sub("Audio"),
            new Sub("Pagination"),
            new Sub("MonthCalendar"),
            new Sub("Regular Expression"),
            new Sub("IndexedDB")
        }),
        new Section("Graphics ", new List<Sub>{
            new Sub("Chart"),
            new Sub("HighCharts"),
            new Sub("Test Canvas"),
            new Sub("Canvas Mouse"),
            new Sub("Canvas"),
            new Sub("Svg")
        }),
        new Section("LinqJS ", new List<Sub>{
            new Sub("Home")
        }),
        new Section("TypeScript ", new List<Sub>
        {
            new Sub("Home")
        }),
        new Section("DataTable ",  new List<Sub>
        {
            new Sub("Home")
        }),
        new Section("React ",  new List<Sub>
        {
            new Sub("Home")
        }),
        new Section("Angular ", new List<Sub>
        {
            new Sub("Home")
        }),
        new Section("Moment ", new List<Sub>
        {
            new Sub("Home")
        })
    };

    ValueProviderResult controller = ViewContext.Controller.ValueProvider.GetValue("controller");
}

<div class="container-fluid">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">SandboxJS</a>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            @foreach (var s in sections)
            {
                <li class="@(controller.RawValue.Equals(s.Name.Replace(" ", string.Empty)) ? "dropdown active" : "dropdown")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@s.Name<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @foreach (var sub in s.Subs)
                        {
                            <li>
                                <a href="@sub.Url">
                                    <span>@sub.Name</span>
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</div>


